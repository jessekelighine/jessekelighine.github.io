%%% Date Time %%%
\usepackage{datetime}
\newtimeformat{mytime}%
{\twodigit{\THEHOUR}:\twodigit{\THEMINUTE}} % \THESECOND
\settimeformat{mytime}%
\newdateformat{mydate}
{\THEYEAR-\twodigit{\THEMONTH}-\twodigit{\THEDAY}}
\setdefaultdate{\mydate}
