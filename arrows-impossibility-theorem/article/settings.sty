%%% TikZ Color Box %%%
\usepackage[breakable]{tcolorbox}
\tcbuselibrary{theorems,skins}
\makeatletter
\tcbset{mycolorbox/.style={
enhanced,sharp corners,frame hidden,boxrule=0sp,
left=8pt,right=4pt,top=4pt,bottom=4pt,
colback=#1!5,borderline west={3pt}{0pt}{#1}}}
